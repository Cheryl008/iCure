
<script>
    function navbar() {
        var bar = document.getElementById("navbar");
        bar.setAttribute("style", "background-color: white; color: grey");
        if (document.getElementById("clicklog") != null && document.getElementById("clicksignup") != null){
            var login = document.getElementById("clicklog");
            login.setAttribute("style", "background-color: transparent; border: none; color: grey");
            var signup = document.getElementById("clicksignup");
            signup.setAttribute("style", "background-color: transparent; border: none; color: grey");
        }
        else{
            var greet = document.getElementById("greeting");
            greet.setAttribute("style", "background-color: transparent; border: none; color: grey");
            var img = document.getElementById("user_image");
            img.setAttribute("src", "../public/img/user_grey.png");
        }
    }
    function reverse() {
        var bar = document.getElementById("navbar");
        bar.setAttribute("style", "background-color: transparent; color: white");
        if (document.getElementById("clicklog") != null && document.getElementById("clicksignup") != null){
            var login = document.getElementById("clicklog");
            login.setAttribute("style", "background-color: transparent; border: none; color: white");
            var signup = document.getElementById("clicksignup");
            signup.setAttribute("style", "background-color: transparent; border: none; color: white");
        }
        else{
            var greet = document.getElementById("greeting");
            greet.setAttribute("style", "background-color: transparent; border: none; color: white");
            var img = document.getElementById("user_image");
            img.setAttribute("src", "../public/img/user_white.png");
        }
    }
</script>

