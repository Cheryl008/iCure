<form method="POST" action="/posts-new">
    <label for="add-post-title" style="font-size: 45px; font-weight:bold">Title:</label>
    &nbsp;
    &nbsp;
    <input style="font-size: 30px; height: 70px; width: 80%;border:none; background-color:transparent" type="text" name="title" value="" id="add-post-title">
    <hr>
    <!-- Include stylesheet -->
    <link href="https://cdn.quilljs.com/1.1.6/quill.snow.css" rel="stylesheet">


        <!-- Create the editor container -->
        <input type="hidden" name="content">
        <div id="editor" style="height:600px; background-color: white; overflow:auto"></div>
    </div>

    <!-- Include the Quill library -->
    <script src="https://cdn.quilljs.com/1.1.6/quill.js"></script>

    <!-- Initialize Quill editor -->
    <script>
    var quill = new Quill('#editor', {
        theme: 'snow'
    });
    var form = document.querySelector('form');
    form.onsubmit = function() {
        // Populate hidden form on submit
        var content = document.querySelector('input[name=content]');
        content.value = JSON.stringify(quill.getContents());
        console.log("contentyeah", $(form).serialize())
    };
    </script>

    <input type="submit" value="Submit" class="submit-button" id="submit" style="margin-left:72%; margin-top: 30px; background-color:rgb(83, 107, 243); color: white; height: 40px; width: 100px; border:none; border-radius:5px">
</form>