<div class = "ml-4 mb-4">
<h1 class="display-5">Upcoming Assignments</h1>
</div>
<div class="slick-carousel mb-4">
  {{# each upcoming}}
  <div class="container">
        <div class="list">
          <div class="col-sm">
            <div class="card border-light bg-light mb-3" style="width: 25rem; height: 15rem;"> 
                <div class="card-body">
                  <h5 class="card-title">with {{doctor_id}}</h5>
                  <p class="card-text">{{chief_complaint}}</p>
                </div>
                <a href=/appointments/{{slug}} class="custom-card">
                <div class="card-footer bg-warning border-warning">Details</div>
                </a>
              </div>
          </div>
        </div>
      </div>

  {{/each}}
</div>

<div class = "ml-4 mb-4">
<h1 class="display-5">History Assignments</h1>
</div>

<div style="height:100px"></div>
<div class="slick-carousel">
	{{# each history}}
  <div class="container">
        <div class="list">
          <div class="col-sm">
            <div class="card border-light bg-light mb-3" style="width: 25rem; height: 15rem;"> 
                <div class="card-body">
                  <h5 class="card-title">with {{doctor_id}}</h5>
                  <p class="card-text">{{chief_complaint}}</p>
                </div>
                <a href="../views/AppointmentDetail.html" class="custom-card">
                <div class="card-footer bg-warning border-warning">Details</div>
                </a>
              </div>
          </div>
        </div>
      </div>

  {{/each}}
</div>
			
